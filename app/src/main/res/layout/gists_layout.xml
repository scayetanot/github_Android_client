<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/height_profile"
        android:layout_height="@dimen/height_profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/github_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_profile"
        android:layout_toRightOf="@id/avatar">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/half_profile"
            android:text="name" />

        <TextView
            android:id="@+id/created"
            android:layout_width="match_parent"
            android:layout_below="@id/name"
            android:layout_height="@dimen/half_profile"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="created" />

        <TextView
            android:id="@+id/filename"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/half_profile"
            android:layout_above="@+id/created"
            android:layout_toEndOf="@+id/slash"
            android:text="filename" />

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/half_profile"
            android:layout_above="@+id/created"
            android:layout_toEndOf="@+id/name"
            android:text=" / "
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>